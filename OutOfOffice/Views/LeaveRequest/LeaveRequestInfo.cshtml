@model OutOfOffice.Core.Models.LeaveRequestEntity

<style>
    .close-info-btn {
        all: unset;
        cursor: pointer;
        color: #999;
        font-size: 30px;
    }

        .close-info-btn:hover {
            color: #333;
        }
</style>

<div class="container" style="width: 500px;">
    

    <div class="d-flex justify-content-between">
        <h2>Leave Request info</h2>
        <button class="close-info-btn" id="closeButton">
            <span>&times;</span>
        </button>
    </div>

    <div class="form-group mb-3">
        <label asp-for="@Model.Employee.FullName" class="form-label fw-bold">Employee</label>
        <input asp-for="@Model.Employee.FullName" class="form-control" disabled />
    </div>

    <div class="form-group mb-3">
        <label asp-for="@Model.AbsenceReason" class="form-label fw-bold">AbsenceReason</label>
        <input asp-for="@Model.AbsenceReason" class="form-control" disabled />
    </div>

    <div class="form-group mb-3">
        <label asp-for="@Model.StartDate" class="form-label fw-bold">Start Date</label>
        <input asp-for="@Model.StartDate" class="form-control" disabled type="text" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="@Model.EndDate" class="form-label fw-bold">End Date</label>
        <input asp-for="@Model.EndDate" class="form-control" disabled type="text"/>
    </div>

    <div class="form-group mb-3">
        <label asp-for="@Model.Comment" class="form-label fw-bold">Comment</label>
        <textarea asp-for="@Model.Comment" class="form-control" style="height: 150px;" disabled></textarea>
    </div>

    <div class="form-group mb-3">
        <label asp-for="@Model.Status" class="form-label fw-bold">Status</label>
        <input asp-for="@Model.Status" class="form-control" disabled />
    </div>
</div>
