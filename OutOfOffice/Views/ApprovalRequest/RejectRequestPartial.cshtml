@model OutOfOffice.Core.Models.ApprovalRequestEntity

<style>
    .close-btn {
        all: unset;
        cursor: pointer;
        color: #999;
        font-size: 30px;
    }

        .close-btn:hover {
            color: #333;
        }
    h4{
        margin: 0;
    }
</style>


<div class="container" style="width: 500px;">
    


    <div class="d-flex justify-content-between mb-3 align-items-center">

        <h4>Rejecting the leave request.</h4>

        
        <button class="close-btn" id="closeButton">
            <span>&times;</span>
        </button>
    </div>

    <form asp-action="RejectRequest" asp-controller="ApprovalRequest" enctype="multipart/form-data">

        <input type="hidden" asp-for="@Model.Id" />
        <input type="hidden" asp-for="@Model.LeaveRequestId" />

        <div class="form-group mb-3">
            <label asp-for="@Model.ApproverId" class="form-label fw-bold">Approver</label>
            <select asp-for="@Model.ApproverId" asp-items="ViewBag.RelatedEmployees" class="form-select" required></select>
            <span asp-validation-for="@Model.ApproverId" class="text-danger" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="@Model.Comment" class="form-label fw-bold">Comment that rejection should be possible.</label>
            <textarea asp-for="@Model.Comment" class="form-control" style="height: 200px;" required></textarea>
            <span asp-validation-for="@Model.Comment" class="text-danger" />
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-danger">Reject</button>
        </div>
    </form>
</div>


<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>